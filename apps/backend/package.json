{
  "name": "@acme/backend",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/index.ts",
    "build": "pnpm -w exec tsc -p apps/backend/tsconfig.json",
    "start": "node dist/index.js",
    "lint": "pnpm -w exec eslint apps/backend/src apps/backend/drizzle.config.ts",
    "typecheck": "pnpm -w exec tsc -p apps/backend/tsconfig.json --noEmit",
    "test": "pnpm -w exec vitest run --root apps/backend",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:push": "drizzle-kit push --config drizzle.config.ts",
    "db:seed": "ts-node-dev --transpile-only --exit-child src/db/seed.ts"
  },
  "dependencies": {
    "@acme/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "express": "^4.21.2",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.27.2",
    "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0"
  }
}
